            <div class="modal-content">
                <div class="modal-header">
                    <h2 style="text-align:center; width:100%; color:red;">Upcomming Event</h2>

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="text-align:center;">
                    <h5 class="modal-title" style="text-align:center; width:100%;"><a href="@Html.Encode(events.ElementAt(0).Link)">@Html.Encode(events.ElementAt(0).Title)</a></h5>
                    <img src="@Html.Encode(events.ElementAt(0).Image)" class="img-fluid" />
                    <p>@Html.Encode(events.ElementAt(0).Description)</p>
                </div>
            </div>
        </div>
    </div>
}


