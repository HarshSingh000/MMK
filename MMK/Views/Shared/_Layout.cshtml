@using MMK.Models;
@model HomeViewModel
@addTagHelper *, Kentico.Content.Web.Mvc
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

   
    <!-- Favicons -->
    <link href="~/img/fav.png" rel="icon">
    <!-- <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon"> -->
    <!-- Google Fonts -->
    <!-- Vendor CSS Files -->
    <link href="~/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/search/style.css" />
    <link rel="stylesheet" href="~/search/mobile-emulator.css" />
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.2.0/css/all.css"
          integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ"
          crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="~/search/jquery.highlight.js"></script>
    <script src="~/search/jquery.scrollto.js"></script>
    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
    <page-builder-styles />
    @RenderSection("styles", required: false)

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top ">
        <div class="container d-flex align-items-center">

            <!-- <h1 class="logo me-auto"><a href="index.html">Arsha</a></h1> -->
            <!-- Uncomment below if you prefer to use an image logo -->
            <a href="home" class="logo me-auto">
                @*<img src="/img/logo.png" alt="" class="img-fluid">*@
                <editable-area area-identifier="editableAreaLogoTop" />
            </a>
            @* <div class="box">
            <input class="input" type="text" name="" placeholder="Search" />
            <button class="button" href="#">
            <i class="material-icons">search</i>
            </button>
            </div>*@
            @await Component.InvokeAsync("Menu")
            <!-- navbar -->
            <div>
                <editable-area area-identifier="editableAreasearch" />
            </div>
        </div>

    </header><!-- End Header -->
    <div class="app" data-finder-wrapper data-finder-scroll-offset="175">

        <div class="content" data-finder-content>
            <section id="hero" class="d-flex align-items-center">

                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
                            @*<img src="assets/img/hero-banner.png" class="img-fluid" alt="">*@
                            <editable-area area-identifier="editableArea3" />
                        </div>
                    </div>
                </div>

            </section>

            <!-- Start Main Section-->
            @RenderBody()

            <!-- ======= Models Section ======= -->
            <section id="services" class="services service-section-bg">
                <div class="container" data-aos="fade-up">

                    <div class="section-title">
                        <h2>Models</h2>
                        <p>We like it SIMPLE</p>
                    </div>

                    <div class="row">
                        <div class="col-lg-3 d-flex flex-column justify-content-center align-items-stretch  order-2 order-lg-2">
                            <div class="icon-box">
                                <h4>Turn Key</h4>
                                <p>Where we finish your dream Kothi well within your budget & time</p>
                            </div>
                        </div>

                        <div class="col-lg-3 d-flex flex-column justify-content-center align-items-stretch  order-2 order-lg-2">
                            <div class="icon-box">
                                <h4>Joint Venture</h4>
                                <p>
                                    Your land We build &
                                    together we benfit out of it
                                </p>
                            </div>
                        </div>

                        <div class="col-lg-6 align-items-stretch order-1 order-lg-1 img">
                            @*<img src="img/models.png" data-aos="zoom-in" data-aos-delay="150" class="img-models">*@
                            <editable-area area-identifier="editableAreaImageModel" />
                        </div>
                    </div>

                </div>
            </section>
            <!-- End Models Section -->
            <!-- ======= Solution ======= -->
            <section id="solution" class="solution section-bg">
                <div class="container" data-aos="fade-up">

                    <div class="section-title">
                        <h2>Problem Vs Solution</h2>
                    </div>

                    <div class="row">

                        <div class="col-lg-7 d-flex flex-column justify-content-center align-items-stretch  order-2 order-lg-1">

                            <div class="content" style="background: #f2c70f;">

                                <p>
                                    <span class="content-blue-highlighter">
                                        Where to find NAVTRATANAS?<br>Affordable - Honest -
                                        Professional
                                    </span></br>
                                    <ul>
                                        <li>Construction Service.</li>
                                        <li>Where to find NAVTRATANAS?</li>
                                        <li>Architect SAAB</li>
                                        <li>Civil Contractor DADA</li>
                                        <li>Electricals Contractor Babu</li>
                                        <li>Plumbing Contractor Pappu</li>
                                        <li>Sanitary Wale Bhaisaab</li>
                                        <li>Landscaping wali BehanJi</li>
                                        <li>Pool & water feature designers</li>
                                        <li>Interior wali Saali ki dost</li>
                                        <li>Modular Kitchen wale lala Ji</li>
                                    </ul>

                                    <span class="content-blue-highlighter"><strong></strong></span>

                                </p>
                            </div>
                        </div>

                        <div class="col-lg-5 align-items-stretch order-1 order-lg-2 img"
                             style='background-image: url("/img/about-us.png");' data-aos="zoom-in" data-aos-delay="150">
                            &nbsp;
                        </div>
                    </div>

                </div>
            </section>
            <!-- End Solution -->
            <!-- ======= gallery Section ======= -->
            <section id="gallery" class="gallery gallery-section-bg">
                <div class="container" data-aos="fade-up">

                    <div class="section-title">
                        <h2>Gallery</h2>
                        <p>We like it SIMPLE</p>
                    </div>

                    <div class="row">
                        @foreach (var GalleryList in Model.GalleryViewModel)
                        {
                            <div class="gallery-item-display col-lg-4 order-2 order-lg-2 img">
                                <img src="@GalleryList.Image" data-aos="zoom-in" data-aos-delay="150" class="img-models">
                            </div>
                        }


                    </div>

                    <div class="gallery-but">
                        <button type="button" class="gallery-but button">
                            <a href="/Gallery-Page"> View our projects</a>
                        </button>
                    </div>

                </div>
            </section>
            <!-- End Portfolio Section-->
            <!-- ======= Team Section ======= -->
            @await Component.InvokeAsync("Team")
            <!-- End Team Section -->
            <!-- ======= Kothi Section ======= -->
            <section class="about">
                <div class="container" data-aos="fade-up">

                    <div class="section-title">
                        <p>
                            <h4>Hundreds of unseen heroes who will leave no stone unturned to fulfill your KOTHI dream</h4>
                        </p>
                    </div>
                    <div>
                        <editable-area area-identifier="editableAreaAbout" />
                    </div>
                </div>
            </section>
            <!-- End Kothi Section -->
            <!-- ======= Frequently Asked Questions Section ======= -->
            @await Component.InvokeAsync("Faq")
            <!-- End Frequently Asked Questions Section -->
            <!-- ======= Contact Section ======= -->
            <section id="contact" class="contact">
                <div class="container" data-aos="fade-up">

                    <div class="section-title">
                        <h2>Contact</h2>
                        <p>Have questions about our solutions or services? You can contact us anytime and we will you respond you.</p>
                    </div>

                    <div class="row">

                        <div class="col-lg-5 d-flex align-items-stretch">
                            @foreach (var ContactDetails in Model.ContactViewModel)
                            {
                                <div class="info">
                                    <div class="address">
                                        <i class="bi bi-geo-alt"></i>
                                        <h4>Location:</h4>
                                        <p>@ContactDetails.Location</p>
                                    </div>

                                    <div class="email">
                                        <i class="bi bi-envelope"></i>
                                        <h4>Email:</h4>
                                        <p>@ContactDetails.Email</p>
                                    </div>

                                    <div class="phone">
                                        <i class="bi bi-phone"></i>
                                        <h4>Call:</h4>
                                        <p>@ContactDetails.Call</p>
                                    </div>

                                    <iframe src="@ContactDetails.GoogleMapLink"
                                            frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen="" loading="lazy"
                                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                                </div>
                            }
                        </div>

                        <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                            <div class="php-email-form">
                                <div class="row">
                                    <editable-area area-identifier="editableAreaForm" />
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </section>
            <!-- End Contact Section -->
            <!-- ======= Misc Section ======= -->
            <section id="about" class="about">
                <div class="container" data-aos="fade-up">

                    <div class="section-title">
                        <h2>aap sirf relax karo</h2>
                    </div>

                    <div>
                    </div>
                    <editable-area area-identifier="editableAreaFooterImage" />
                </div>
            </section>
            <!-- End Misc Section -->
            <!-- End #main -->

            <script src="~/search/jquery.finder.js"></script>
            <!-- ======= Footer ======= -->
            <footer id="footer">

                <div class="container footer-bottom clearfix">
                    <div class="copyright">
                        &copy; Copyright <strong><span>makemykothi</span></strong>. All Rights Reserved
                    </div>
                </div>
            </footer><!-- End Footer -->
        </div>
    </div>
    @*<div id="preloader"></div>*@
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <!-- Vendor JS Files -->
    @*  <script src="~/Scripts/jquery-3.5.1.min.js"></script>*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="vendor/aos/aos.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/glightbox/js/glightbox.min.js"></script>
    <script src="vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="vendor/swiper/swiper-bundle.min.js"></script>
    <script src="vendor/waypoints/noframework.waypoints.js"></script>
    <script src="vendor/php-email-form/validate.js"></script>
    <page-builder-scripts />
    <!-- Template Main JS File -->
    <script src="js/main.js"></script>
    @RenderSection("scripts", required: false)
    <style>
        input[type=submit] {
            background: #000000;
            border: 0;
            padding: 12px 34px;
            color: #fff;
            transition: 0.4s;
            border-radius: 50px !important;
        }

        input:hover[type=submit] {
            background: #ffc107;
            color: #000;
        }

        form {
        }

            form .form-field {
                padding-bottom: 20px;
            }

                form .form-field .field-validation-error {
                    font-weight: bold;
                    color: red;
                }




        .box {
            position: absolute;
            top: 0%;
            left: 40%;
            transform: translate(-50%, 50%);
            background: #2f3640;
            height: 40px;
            border-radius: 40px;
            padding: 8px;
        }

            .box:hover > .input {
                width: 240px;
                padding: 0 6px;
            }

            .box:hover > .searchButton {
                background: white;
                color: #2f3640;
            }

        .button {
            color: white;
            float: right;
            width: auto;
            height: 23px;
            border-radius: 50%;
            background: #2f3640;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: 0.4s;
            font-size: 12px;
        }

        .input {
            border: none;
            background: none;
            outline: none;
            float: left;
            padding: 0;
            color: white;
            font-size: 15px;
            transition: 0.4s;
            line-height: 0px;
            width: 0px;
        }

    </style>

</body>

</html>